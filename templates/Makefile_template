CC=gcc
TARGET=ptr_chase
TARGET_ARRAYGEN=arraygen

# Architectural details
cache_line_size = {{CACHE_LINE_SIZE_VALUE}}

# Benchmark configuration
array_size = {{ARRAY_SIZE_VALUE}}
instructions = {{INSTRUCTIONS_VALUE}}
iterations = {{ITERATIONS_VALUE}}
burst_iterations = {{BURST_ITERS_VALUE}}

# Compute derived parameters
array_elems:=$(shell echo $$(( $(array_size) / $(cache_line_size) )))
loop_instr:=$(shell echo $$(( $(instructions) / $(iterations) )))

all: $(TARGET) array

$(TARGET): ptr_chase.c loop.h
	$(CC) -O0 -pthread -DARRAY_ELEMS=$(array_elems) -DITERS=$(iterations) -DBURST_ITERS=$(burst_iterations) -DLOOP_FOREVER=1 -o $(TARGET) ptr_chase.c

loop.h: loop_template.h
	awk '{for(i=0; i<${loop_instr}; i++)print}' loop_template.h > loop.h

$(TARGET_ARRAYGEN): arraygen.c
	$(CC) -O3 -DARRAY_ELEMS=$(array_elems) -o $(TARGET_ARRAYGEN) arraygen.c

array: $(TARGET_ARRAYGEN)
	./$(TARGET_ARRAYGEN)

clean:
	rm -f $(TARGET) $(TARGET_ARRAYGEN)
	rm -f loop.h

fullclean: clean
	rm -f array.dat

.PHONY: all array clean fullclean
